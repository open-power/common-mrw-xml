    <simpleType>
        <string>
            <default>NULL</default>
            <sizeInclNull>4</sizeInclNull>
        </string>
    </simpleType>
    <persistency>volatile-zeroed</persistency>
    <readable/>
    <writeable/>
    <fspOnly/>
</attribute>

